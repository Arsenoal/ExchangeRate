<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.organizations.SingleOrganizationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/city"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_black_bottom"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/mainCardHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium_big"
                    android:layout_marginEnd="@dimen/margin_medium_big"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    android:layout_gravity="center_vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingEnd="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/bankNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Inecobank"
                            android:layout_marginTop="@dimen/margin_big"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large"
                            android:layout_gravity="center_horizontal"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/bankCityLocationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Աբովյան"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_gravity="center_horizontal"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@color/blackTransparentTwentyPercent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/bankCityAddressLocationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Սահմադրության հրապարակ 7/3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_medium_small"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_phone"
                                />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/organizationPhoneNumberTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/black"
                                tools:text="+37455266165"
                                android:layout_marginStart="@dimen/margin_medium_small"
                                />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/contactNumberTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_number"
                            android:textSize="@dimen/text_size_small"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin_medium_big"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_calendar"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium_small"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/workingHourFirstKeyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium"
                                    tools:text="Երկ-ուրբ"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/workingHourSecondKeyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium"
                                    tools:text="Շաբաթ"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/workingHourFirstValueTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium"
                                    tools:text="09:05 - 17:00"
                                    />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/workingHourSecondValueTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium"
                                    tools:text="10:00 - 15:00"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/workingDaysTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/working_days"
                            android:layout_gravity="center_horizontal"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_big"
                            android:background="@color/blackTransparentTwentyPercent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/viewOnMapTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/padding_small_medium"
                            android:text="@string/see_on_map"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bankImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/mainCardHolder"
                android:layout_marginTop="-25dp"
                app:srcCompat="@drawable/ic_bank"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_big"
                android:layout_marginEnd="@dimen/margin_medium_big"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_medium">

                <RadioButton
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:layout_marginStart="@dimen/margin_medium_big"
                    android:layout_gravity="center_vertical|start"
                    android:checked="true"
                    android:text="@string/cache"
                    android:textColor="@color/white"
                    />

                <RadioButton
                    android:id="@+id/noCache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_gravity="center_vertical|end"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/non_cache"
                    android:textColor="@color/white"
                    />

            </FrameLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_page_navbar_height"
            android:background="@drawable/shadow_bottom_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_small">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/distance"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:tint="@color/blackTransparentTenPercent"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_arrow_down"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/margin_small">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_big"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/buyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/buy"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:tint="@color/blackTransparentTenPercent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_arrow_down"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sellTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/sell"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:tint="@color/blackTransparentTenPercent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_arrow_down"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currencyListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="5"
            tools:listitem="@layout/currency_recycler_item"
            />

    </LinearLayout>

</LinearLayout>